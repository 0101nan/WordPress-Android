<?xml version="1.0" encoding="utf-8"?>

<!--
    attribution section for "discovery" posts
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <org.wordpress.android.widgets.WPNetworkImageView
        android:id="@+id/image_attribution_avatar"
        style="@style/ReaderImageView.Avatar.Small"
        android:layout_marginRight="@dimen/margin_large"
        android:background="?android:selectableItemBackground"
        tools:src="@drawable/gravatar_placeholder" />

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/text_attribution"
        style="@style/ReaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_sz_medium"
        tools:text="text_attribution" />

</LinearLayout>