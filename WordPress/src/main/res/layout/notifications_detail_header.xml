<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notification_header_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_extra_large"
        android:paddingRight="@dimen/margin_extra_large"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:orientation="horizontal">

        <org.wordpress.android.widgets.NoticonTextView
            android:id="@+id/notification_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_medium"
            android:gravity="center"
            android:textColor="@color/notifications_grey"
            android:textSize="18sp" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/notification_header_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/notifications_blue"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_sz_medium" />


    </LinearLayout>

</LinearLayout>