<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:maxWidth="480dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/nux_fragment_icon"
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/nux_fragment_title"
            style="@style/WordPress.NUXTitle"
            app:fontVariation="light" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/nux_fragment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="#bdddec"
            android:textSize="18sp"
            android:shadowColor="@color/nux_shadow"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" />

        <org.wordpress.android.widgets.WPTextView
            style="@style/WordPress.NUXThirdButton"
            android:id="@+id/nux_sign_in_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_capital"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="bottom">

        <org.wordpress.android.widgets.WPTextView
            style="@style/WordPress.NUXWhiteButtonNoBg"
            android:id="@+id/nux_create_account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nux_welcome_create_account"
            android:gravity="center|bottom"
            android:layout_gravity="center" />
    </LinearLayout>


</LinearLayout>