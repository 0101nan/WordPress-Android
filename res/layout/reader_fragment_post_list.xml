<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@android:id/list"
        style="@style/ReaderListView.Posts"
        tools:listitem="@layout/reader_listitem_post_excerpt" />

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/text_new_posts"
        style="@style/ReaderTextView.MessageBar"
        android:text="@string/reader_label_new_posts_one"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/nux_icon_wp" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/title_empty"
            style="@style/WordPress.EmptyList.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/reader_empty_posts_in_tag" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/description_empty"
            style="@style/WordPress.EmptyList.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/reader_empty_posts_in_tag" />

    </LinearLayout>

</RelativeLayout>