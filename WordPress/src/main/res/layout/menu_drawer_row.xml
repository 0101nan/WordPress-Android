<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MenuDrawerButton"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_drawer_row_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_large">

    <ImageView
        android:id="@+id/menu_row_icon"
        android:layout_width="@dimen/menu_drawer_icon_size"
        android:layout_height="@dimen/menu_drawer_icon_size"
        android:clickable="false"
        android:contentDescription="@string/posts"
        android:scaleType="centerInside"
        android:tint="@color/md__icon_tint"
        tools:src="@drawable/dashicon_admin_post_black" />

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/menu_row_title"
        style="@style/MenuDrawerButton.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:clickable="false"
        tools:text="@string/posts" />

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/menu_row_badge"
        style="@style/MenuDrawerCommentBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/menu_drawer_badge_size"
        android:minWidth="@dimen/menu_drawer_badge_size"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>