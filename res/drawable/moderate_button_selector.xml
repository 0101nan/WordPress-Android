<?xml version="1.0" encoding="utf-8"?>

<!--
    Drawable for moderation buttons on comment detail
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_light" />
            <stroke android:color="@color/blue_medium" android:width="1px" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_light" />
            <stroke android:color="@color/blue_medium" android:width="1px" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_light" />
            <stroke android:color="@color/grey_medium" android:width="1px" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_new_kid" />
            <stroke android:color="@color/blue_medium" android:width="1px" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>