<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/text_empty"
        android:textSize="@dimen/text_sz_large"
        android:textColor="@color/grey_medium_dark"
        android:padding="@dimen/margin_extra_large"
        android:layout_marginLeft="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reader_label_reblog_empty" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_post_excerpt"
            layout="@layout/reader_reblog_post_excerpt" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/text_reblog_label"
            style="@style/ReaderTextView.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/reader_label_reblog_to" />

        <Spinner
            android:id="@+id/spinner_reblog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_comment"
            style="@style/ReaderEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/reader_edittext_frame"
            android:gravity="top"
            android:hint="@string/reader_hint_reblog_comment"
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="3"
            android:padding="@dimen/margin_medium" />

        <Button
            android:id="@+id/btn_reblog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reader_btn_reblog" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/ReaderProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:visibility="visible"
        android:visibility="gone" />

</RelativeLayout>