<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="wp_pref_notifications_root">
    <PreferenceCategory
        android:title="@string/blogs"
        android:key="@string/pref_notification_blogs">
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Other Blogs"
        android:key="@string/pref_notification_other_blogs">
        <Preference android:title="Comments on other blogs"
            android:summary="Control your notification settings when you comment on other blogs." />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Account Emails"
        android:key="@string/pref_notification_other_blogs">
        <Preference android:title="Updates from WordPress.com"
            android:summary="Decide what emails you get from us regarding your accounts and sites." />
    </PreferenceCategory>
    <PreferenceCategory android:title="Sights and Sounds">
        <SwitchPreference
            android:defaultValue="false"
            android:key="wp_pref_notification_sound"
            android:title="@string/notification_sound"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="wp_pref_notification_vibrate"
            android:title="@string/notification_vibrate"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="wp_pref_notification_light"
            android:title="@string/notification_blink"/>
    </PreferenceCategory>
</PreferenceScreen>
