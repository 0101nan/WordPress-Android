<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/people_list_row_height"
                android:background="?android:selectableItemBackground">

    <org.wordpress.android.widgets.WPNetworkImageView
        android:id="@+id/people_list_row_avatar"
        android:layout_width="@dimen/avatar_sz_medium"
        android:layout_height="@dimen/avatar_sz_medium"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:layout_marginLeft="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_extra_large"
        android:layout_marginTop="@dimen/margin_extra_large"/>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/people_list_row_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/people_list_row_avatar"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_toEndOf="@id/people_list_row_avatar"
        android:layout_toRightOf="@id/people_list_row_avatar"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_sz_large"
        tools:text="display_name"/>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/people_list_row_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/people_list_row_display_name"
        android:layout_alignStart="@id/people_list_row_display_name"
        android:layout_below="@id/people_list_row_display_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_sz_medium"
        tools:text="username"/>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/people_list_row_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/people_list_row_avatar"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_toEndOf="@id/people_list_row_display_name"
        android:layout_toRightOf="@id/people_list_row_display_name"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_sz_small"
        tools:text="role"/>

</RelativeLayout>
