<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:maxWidth="480dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:src="@drawable/nux_icon_wp"
                android:layout_marginBottom="8dp" />

            <org.wordpress.android.widgets.WPTextView
                android:text="@string/review_your_information"
                style="@style/WordPress.NUXTitle"
                app:fontVariation="light" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/nux_divider" />

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/email_text"
                style="@style/WordPress.NUXReviewRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/nux_divider" />

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/username_text"
                style="@style/WordPress.NUXReviewRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/nux_divider" />

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/title_text"
                style="@style/WordPress.NUXReviewRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/nux_divider" />

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/address_text"
                style="@style/WordPress.NUXReviewRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/nux_divider" />

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/language_text"
                style="@style/WordPress.NUXReviewRow"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/nux_divider" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/prev_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="@string/action_previous"
                    style="@style/WordPress.NUXPrimaryButton" />

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/action_next"
                    style="@style/WordPress.NUXPrimaryButton" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>