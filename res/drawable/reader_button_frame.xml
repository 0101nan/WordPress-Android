<?xml version="1.0" encoding="utf-8"?>

<!--
    background selector for buttons that need to be framed without a background color
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/blue_extra_light" android:state_pressed="true" />
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/grey_light" />
        </shape>
    </item>
</selector>