<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dotcomLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

    <EditText
        android:id="@+id/dotcomUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="@string/username"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/dotcomPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dotcomUsername"
        android:layout_marginBottom="8dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/password_visibility"/>

    <ImageView
        android:id="@+id/password_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dashicon_eye_closed"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:tint="@color/nux_eye_icon_color"
        android:layout_alignBottom="@+id/dotcomPassword"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/saveDotcom"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dotcomPassword"
        android:text="@string/sign_in"/>

    <TextView
        android:id="@+id/wpcomHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/reader_hyperlink"
        android:layout_gravity="left"
        android:layout_marginBottom="16dip"
        android:paddingLeft="4dip"
        android:text="@string/need_help_signin_wpcom"
        android:layout_alignBottom="@+id/saveDotcom"/>

</RelativeLayout>