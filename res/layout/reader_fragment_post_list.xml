<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_border_left"
        android:layout_width="@dimen/reader_margin_medium"
        android:layout_height="wrap_content"
        android:background="@color/reader_divider_grey"/>

    <View
        android:id="@+id/view_border_right"
        android:layout_width="@dimen/reader_margin_medium"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/reader_divider_grey"/>

    <ListView
        android:id="@android:id/list"
        style="@style/ReaderListView.NoDivider"
        android:layout_toLeftOf="@+id/view_border_right"
        android:layout_toRightOf="@+id/view_border_left"
        tools:listitem="@layout/reader_listitem_post_excerpt" />

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/text_new_posts"
        style="@style/ReaderTextView.MessageBar"
        android:text="@string/reader_label_new_posts_one"
        android:visibility="gone" />

    <include
        android:id="@+id/empty_view"
        layout="@layout/reader_empty_view"/>

</RelativeLayout>