<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/blavatar"
        android:gravity="center|center"
        android:layout_height="42dip"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="12dip"
        android:layout_width="42dip"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/app_icon" >
    </com.android.volley.toolbox.NetworkImageView>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/blavatar"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_medium_large"
        android:paddingTop="@dimen/margin_medium_large" >

        <TextView
            android:id="@+id/blogName"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dip"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/margin_medium"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="@string/wordpress_blog"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/blogUser"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:padding="0px"
            android:singleLine="true"
            android:text="@string/blogusername"
            android:textColor="#666666"
            android:textColorLink="@color/blue_wordpress"
            android:textSize="12sp" >
        </TextView>

    </LinearLayout>

</RelativeLayout>
