<?xml version="1.0" encoding="utf-8"?>

<!--
    post for PostDetailActivity, inserted as ListView header
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_detail_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/reader_margin_large"
        android:layout_marginRight="@dimen/reader_margin_large"
        android:layout_marginTop="@dimen/reader_margin_large"
        android:background="@drawable/reader_button_transparent_selector">

        <org.wordpress.android.widgets.WPNetworkImageView
            android:id="@+id/image_avatar"
            style="@style/ReaderImageView.Avatar"
            android:layout_marginRight="@dimen/reader_margin_large" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/text_title"
            style="@style/ReaderTextView.Post.Title.Detail"
            android:layout_toRightOf="@+id/image_avatar"
            android:text="text_title" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/text_blog_name"
            style="@style/ReaderTextView.Source.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="@dimen/reader_margin_small"
            android:layout_toLeftOf="@+id/text_follow"
            android:layout_toRightOf="@+id/image_avatar"
            android:text="text_blog_name" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/text_date"
            style="@style/ReaderTextView.Source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_blog_name"
            android:layout_alignRight="@+id/text_blog_name"
            android:layout_below="@+id/text_blog_name"
            android:text="text_date" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/text_follow"
            style="@style/ReaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/text_blog_name"
            android:drawableLeft="@drawable/note_icon_follow"
            android:paddingBottom="@dimen/reader_margin_small"
            android:paddingLeft="@dimen/reader_margin_medium"
            android:paddingTop="@dimen/reader_margin_small"
            android:text="text_follow"
            android:textColor="@color/reader_hyperlink"
            android:textSize="@dimen/reader_text_sz_small" />

    </RelativeLayout>

    <!-- liking avatars are inserted into this LinearLayout at runtime -->
    <LinearLayout
        android:id="@+id/layout_liking_avatars"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reader_avatar_sz_like"
        android:layout_below="@+id/layout_detail_title"
        android:layout_marginTop="@dimen/reader_margin_large"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_liking_avatars"
        android:layout_marginLeft="@dimen/reader_margin_large"
        android:layout_marginRight="@dimen/reader_margin_large"
        android:layout_marginTop="@dimen/reader_margin_large"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider_comments"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reader_margin_large"
        android:layout_below="@+id/webView"
        android:layout_marginTop="@dimen/reader_margin_large"
        android:background="@color/grey_extra_light"
        android:visibility="gone" />

</RelativeLayout>
