<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/top_spacing"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_extra_large"
        android:background="@color/grey_lighten_30">
    </View>

    <TextView
        android:id="@+id/complete_tasks_header_label"
        style="@style/QuickStartTitle"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_spacing"
        android:layout_marginStart="@dimen/margin_extra_large"
        android:layout_toStartOf="@id/completed_tasks_list_chevron"
        android:ellipsize="end"
        android:enabled="false"
        android:minHeight="@dimen/quick_start_complete_tasks_header_height"
        android:text="@string/quick_start_complete_tasks_header">
    </TextView>

    <ImageView
        android:id="@+id/completed_tasks_list_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/top_spacing"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:contentDescription="@string/quick_start_completed_tasks_header_chevron_expand_desc"
        android:minHeight="@dimen/one_line_list_item_height"
        android:src="@drawable/ic_chevron_down_blue_wordpress_24dp"
        android:tint="@color/grey_darken_20">
    </ImageView>

</RelativeLayout>
