<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/indent_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/page_item_horizontal_padding"
            android:layout_marginLeft="@dimen/page_item_horizontal_padding"
            android:gravity="center_vertical"
            android:textColor="@color/wp_grey_dark"
            android:textSize="16sp"
            tools:text="First page"/>

        <ImageButton
            android:id="@+id/page_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/show_more_desc"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingRight="@dimen/page_item_horizontal_padding"
            android:paddingEnd="@dimen/page_item_horizontal_padding"
            android:paddingLeft="@dimen/page_item_horizontal_padding"
            android:paddingStart="@dimen/page_item_horizontal_padding"
            app:srcCompat="@drawable/ic_ellipsis_grey_lighten_10_24dp" />

    </LinearLayout>

</LinearLayout>
