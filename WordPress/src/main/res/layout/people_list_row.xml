<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/people_list_row_height"
    android:background="?android:selectableItemBackground">

    <include
        android:id="@+id/person_details"
        layout="@layout/person_detail"/>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/people_list_row_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:layout_toEndOf="@id/person_details"
        android:layout_toRightOf="@id/person_details"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_sz_small"
        tools:text="role"/>

</RelativeLayout>
