<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:paddingEnd="?android:attr/scrollbarSize"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="@dimen/margin_none"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/delete_site_preference_margin_large"
        android:layout_marginStart="@dimen/delete_site_preference_margin_large"
        android:layout_marginRight="@dimen/delete_site_preference_margin_medium"
        android:layout_marginEnd="@dimen/delete_site_preference_margin_medium"
        android:layout_marginTop="@dimen/delete_site_preference_margin_large"
        android:layout_marginBottom="@dimen/delete_site_preference_margin_medium"
        android:layout_weight="1">


        <ImageView
            android:id="@+android:id/icon"
            android:layout_width="@dimen/delete_site_preference_margin_large"
            android:layout_height="@dimen/delete_site_preference_margin_large"
            android:layout_marginRight="@dimen/delete_site_preference_margin_medium"
            android:layout_gravity="center"
            android:tint="@color/grey_darken_30"/>

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingLeft="@dimen/delete_site_preference_margin_small"
            android:layout_toRightOf="@android:id/icon"
            android:layout_alignBottom="@android:id/icon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal" />

        <TextView
            android:id="@android:id/summary"
            android:layout_marginTop="@dimen/delete_site_preference_margin_medium"
            android:layout_marginBottom="@dimen/delete_site_preference_margin_medium"
            android:paddingLeft="@dimen/delete_site_preference_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:layout_alignLeft="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:id="@android:id/widget_frame"
            android:layout_below="@android:id/summary"
            android:layout_alignLeft="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" />

    </RelativeLayout>

</LinearLayout>
