<?xml version="1.0" encoding="utf-8"?>
<org.wordpress.android.ui.notifications.DetailHeader xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg_selector"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_large"
    android:paddingLeft="@dimen/margin_large">

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:textColor="@color/grey_medium_dark"
        android:textSize="@dimen/text_sz_large" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/grey_medium"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/margin_medium" />

</org.wordpress.android.ui.notifications.DetailHeader>