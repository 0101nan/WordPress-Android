<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools"
           tools:targetApi="n_mr1">
    <shortcut
        android:icon="@drawable/ic_reader_blue_wordpress_18dp"
        android:shortcutId="stats"
        android:shortcutLongLabel="@string/stats"
        android:shortcutShortLabel="@string/stats">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="org.wordpress.android.ui.main.WPMainActivity"
            android:targetPackage="org.wordpress.android.beta">
            <extra
                android:name="org.wordpress.android.ui.ShortcutsNavigator.ACTION_OPEN_SHORTCUT"
                android:value="org.wordpress.android.ui.ShortcutsNavigator.OPEN_STATS"/>
        </intent>
    </shortcut>
    <shortcut
        android:icon="@drawable/ic_posts_grey_24dp"
        android:shortcutId="new_post"
        android:shortcutLongLabel="@string/new_post"
        android:shortcutShortLabel="@string/new_post">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="org.wordpress.android.ui.main.WPMainActivity"
            android:targetPackage="org.wordpress.android.beta">
            <extra
                android:name="org.wordpress.android.ui.ShortcutsNavigator.ACTION_OPEN_SHORTCUT"
                android:value="CREATE_NEW_POST"/>
        </intent>
    </shortcut>
    <shortcut
        android:icon="@drawable/ic_posts_grey_24dp"
        android:shortcutId="notifications"
        android:shortcutLongLabel="@string/notifications_screen_title"
        android:shortcutShortLabel="@string/notifications_screen_title">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="org.wordpress.android.ui.main.WPMainActivity"
            android:targetPackage="org.wordpress.android.beta">
            <extra
                android:name="org.wordpress.android.ui.ShortcutsNavigator.ACTION_OPEN_SHORTCUT"
                android:value="OPEN_NOTIFICATIONS"/>
        </intent>
    </shortcut>
</shortcuts>
