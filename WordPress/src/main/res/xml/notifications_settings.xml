<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="wp_pref_notifications_root">
    <PreferenceCategory
        android:title="@string/blogs"
        android:key="@string/pref_notification_blogs">
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/notifications_other_blogs">
        <PreferenceScreen android:key="@string/pref_notification_other_blogs"
            android:title="@string/notifications_comments_other_blogs"
            android:summary="@string/notifications_other_blogs_summary" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/notifications_account_emails"
        android:key="@string/pref_notification_account_emails" />
    <PreferenceCategory android:title="@string/notifications_sights_and_sounds"
        android:key="@string/pref_notification_sights_sounds">
        <SwitchPreference
            android:defaultValue="false"
            android:key="wp_pref_notification_sound"
            android:title="@string/notification_sound"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="wp_pref_notification_vibrate"
            android:title="@string/notification_vibrate"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="wp_pref_notification_light"
            android:title="@string/notification_blink"/>
    </PreferenceCategory>
</PreferenceScreen>
